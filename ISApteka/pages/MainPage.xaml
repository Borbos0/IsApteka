<Page x:Class="ISApteka.pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ISApteka.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Name="BtnStock" Grid.ColumnSpan="2" Width="150px" Content="Склад" Click="BtnStock_Click"></Button>
        <Button Name="BtnDoctor" Grid.ColumnSpan="2" Width="150px" Content="Доктора" Click="BtnDoctor_Click" Grid.Row="1"></Button>
        <Button Name="BtnBill" Grid.ColumnSpan="2" Width="150px" Grid.RowSpan="2" Content="Квитанции" Click="BtnBill_Click" Grid.Column="1"></Button>
    </Grid>
</Page>
